<div class="row">
  <div class="col-sm-9">
    <h1>Recipes in <%= @category.tag %></h1>
    <% if @category.recipes.any? %>
      <ul class="list-group">
      <% @category.recipes.each do |recipe| %>
        <li class="list-group-item"><a href="/recipes/<%= recipe.id %>"><%= recipe.name %></a></li>
      <% end %>
      </ul>
    <% else %>
      <h3>There are no recipes</h3>
    <% end %>

    <a href="/category/<%= @category.id %>/edit" class="btn btn-primary btn-md">Edit</a>

    <a href="/category/<%= @category.id %>/delete" class="btn btn-danger btn-md">Delete</a>
  </div>
  <div class="col-sm-3">
    <h1>Cats</h1>
    <% if @categories.any? %>
      <ul class="list-group">
      <% @categories.each do |category| %>
        <li class="list-group-item"><a href="/categories/<%= category.id %>"><%= category.tag %></a></li>
      <% end %>
      </ul>
    <% else %>
      <h3>There are no categories</h3>
    <% end %>
  </div>
</div>
