<div class="row">
  <div class="col-sm-9">
    <h1>All Recipes</h1>
    <% if @recipes.any? %>
      <ul class="list-group">
      <% @recipes.each do |recipe| %>
        <li class="list-group-item"><a href="/recipes/<%= recipe.id %>"><%= recipe.name %></a></li>
      <% end %>
      </ul>
    <% else %>
      <h3>There are no recipes</h3>
    <% end %>
  </div>
  <div class="col-sm-3">
    <h1>Cats</h1>
    <% if @categories.any? %>
      <ul class="list-group">
      <% @categories.each do |category| %>
        <li class="list-group-item"><a href="/categories/<%= category.id %>"><%= category.name %></a></li>
      <% end %>
      </ul>
    <% else %>
      <h3>There are no categories</h3>
    <% end %>
  </div>
</div>
