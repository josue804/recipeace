<h1><%= @recipe.name %></h1>

<h3>Ingredients</h3>
<ul>
  <% count = 0 %>
<% @recipe.ingredients.each do |ingredient|%>
<li><strong><%= @recipe.used_ingredients[count].amount %></strong> <%= ingredient.ingredient %> </li>
<% count += 1 %>
<% end %>
</ul>

<h3>Instructions</h3>
<p class="jk-indent"><%= @recipe.instructions %></p>

<h3>Tags</h3>
<p><%= @recipe.display_tags %></p>


<a href="/recipe/<%= @recipe.id %>/edit" class="btn btn-primary btn-md">Edit</a>

<a href="/recipe/<%= @recipe.id %>/delete" class="btn btn-danger btn-md">Delete</a>
